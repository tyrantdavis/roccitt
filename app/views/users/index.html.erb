 <h1 class="text-center">Admin User-Dashboard</h1>
 <h2>Users</h2>
 <div class="row">
   <div class="col-md-8">
     <% @users.each do |user| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">
             Name: <%= link_to user.name, user %>
           </h4>
            <p>
               <b> Email:</b> <%= user.email %>           
            </p>
           <div>
           <br>
            <%= link_to "Delete User", user_path(user), method: :delete, class: 'btn btn-danger btn-sm',  data: { confirm: 'Are you sure you want to delete this topic?' } %>
           </div>
         </div>
       </div>
       <hr>
     <% end %>
   </div>
 </div>
 <br />
<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @users %>
    </div>
    <%= will_paginate @users, :container => false %>
  </div>