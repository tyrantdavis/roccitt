<!DOCTYPE html>
<html>
  <head>
    <title>Roccitt</title>
   <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
    <ul class="nav nav-tabs">
      <li> <%= link_to "Roccitt", root_path %> </li>
      <li> <%= link_to "Topics", topics_path %> </li>
      <li> <%= link_to "About", about_path %>  </li>

      <div class="pull-right user-info">
          <% if current_user %>
  <%# #9 %>
           <%= image_tag current_user.avatar_url(48), class: "gravatar" %>

            <div class="pull-right user-info-details">
  <%# #10 %>
             <%= link_to current_user.name, user_path(current_user) %> <br/> <%= link_to "Sign Out", session_path(current_user), method: :delete %>

            </div>
          <% else %> 
         <li  class="pull-right"><%= link_to "Sign In ", new_session_path %></li>  
          <% end %>      
      </div>
    </ul>


   
     <% if flash[:notice] %>
       <div class="alert alert-success">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:notice] %>
       </div>
     <% elsif flash[:alert] %>
       <div class="alert alert-warning">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:alert] %>
       </div>
     <% end %>

      <%= yield %>
  </div>
    
  </body>
</html>
