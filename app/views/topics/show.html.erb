<h1><%=  @topic.name  %></h1>
    <%=  link_to "Edit" , edit_topic_path(@topic), class: 'btn btn-success btn-sm'  %>
      <%=  link_to' Delete',  @topic, method: :delete, class: 'btn btn-danger btn-sm',  data: { confirm: 'Are you sure you want to delete this topic?' } %>
<div class="row">
  <div class="col-md-8">
    <p class="lead"><%=  @topic.description  %></p>
    <%  @topic.posts.each do |post|  %>
    <div class="media">
      <div class="media-body">
        <h4 class="heading">
          <%=  link_to post.title, topic_post_path(@topic, post) %> 
        </h4>
        <small>
          submitted <%=  time_ago_in_words(post.created_at)  %> ago <br>
          <%=  post.comments.count  %> Comments
        </small>
      </div>
    </div>
    <%  end  %>
  </div>
  <br>
  <div class="col-md-4">
  <%=  link_to" New Post", new_topic_post_path(@topic), class: 'btn btn-default btn-sm' %> 

<%# override the default method (:topic) with :delete so that when the button is pressed the route called is the delete route. %> 
    <%=  link_to' Delete',  @topic, method: :delete, class: 'btn btn-danger btn-sm',  data: { confirm: 'Are you sure you want to delete this topic?' } %>
  </div>
</div>
