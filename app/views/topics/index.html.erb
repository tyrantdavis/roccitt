 <h1>Topics</h1>
 
 <div class="row">

   <div class="col-md-8">
     <% @topics.each do |topic| %>
       <div class="media">
         <div class="media-body">
           <h4 class="media-heading">

            <%# creates a link to the show view for each topic %>
             <%= link_to topic.name, topic %>
           </h4>
           <small>
             <%= topic.description %>
           </small>
         </div>
       </div>
      <div class="public-private">
          <% if  topic.public  %>
          <b> <%=  "Public"  %></b>
          <%  else  %>
          <b> <%=  "Private"  %></b>
          <%  end  %>
     </div>
     <% end %>
   </div>
   <% if user_is_authorized_for_topics? %>
    <div class="col-md-4">
      <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
    </div>
   <% end %>
 </div>
 <br />
<div class="digg_pagination">
    <div class="page_info">
      <%= page_entries_info @topics %>
    </div>
    <%= will_paginate @topics, :container => false %>
  </div>