<h1><%= @post.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%=  @post.body  %></p>
  </div>
  <div class="col-md-4">
    <%=  link_to "Edit" , edit_topic_post_path(@post), class: 'btn btn-success btn-sm'  %>

<%# <%# override the default method (:post) with :delete so that when the button is pressed the route called is the delete route. %> 
    <%=  link_to' Delete',  [ @post.topic, @post], method: :delete, class: 'btn btn-danger btn-sm',  data: { confirm: 'Are you sure you want to delete this post?' } %>
  </div>
</div>
